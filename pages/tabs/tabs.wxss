.head-tab {
   display: flex;
   width: 100%;
   height: 100rpx;
    overflow: hidden;
   border-top: 1rpx solid #ddd;
   border-bottom: 1rpx solid #ddd;
   justify-content: center;
   align-items: center;
   margin-top: 20rpx;
}
.head-tab-item {
    flex:1;
    height: 100%;
    text-align: center;
    border-left: 1rpx solid #ddd;
}
.tabs .active {
    background:#ccc;
}
.head-tab-item:first-child {
  border-left:none;
}
.head-tab-item .title-text {
   font-size: 28rpx;
   margin-bottom: 4rpx;
   margin-top: 20rpx;
}
.head-tab-item .date-mouth {
   display:inline-block;
    font-size: 24rpx;
    margin-right: 10rpx;

}
.head-tab-item .date-week {
   display:inline-block;
   font-size: 24rpx;

}
.address-tab {
    display: flex;
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #ddd;
    justify-content: center;
    align-items: center;
}
.address-tab .address-tab-item {
    flex:1;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    border-left: 1rpx solid #ddd;
    font-size: 28rpx;
}
.address-tab .address-tab-item:first-child {
    border-left:none;
}
.main-tab {
    width: 100%;
    overflow: hidden;
}
.show {
    display: block;
}
.hidden {
    display: none;
}
.day-box {
    width: 100%;
    overflow: hidden;
    margin: 40rpx auto;
    /*border: 1px solid #ddd;*/
}
.day-box .day-item {

}

.title {
    margin: 30rpx 0;
    text-align: center;
    font-size: 30rpx;
    line-height: 50rpx;
}
.btn-order {
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
    border-radius: 100%;

    text-align: center;
    line-height: 300rpx;
    border:none;
    color: #fff;
}
.btn-blue {
    background-color: deepskyblue;
}
.btn-gray {
    background-color: #999;
}
.hasorder-box {
    width:600rpx;
    overflow: hidden;
    margin: 30rpx auto;
    border: 1px solid #ddd;
    padding: 20rpx;
    border-radius: 10rpx;
}
.hasorder-box .hasorder-list {
    /*width: 100%;*/
    overflow: hidden;
    margin-bottom: 40rpx;
}
.hasorder-box .hasorder-list .list-head {
    text-align: center;
    line-height: 50rpx;
    font-size: 34rpx;
    width: 100%;
    margin-bottom: 30rpx;
}
.hasorder-box .hasorder-list .list-div {
    /*width: 100%;*/
    overflow: hidden;
    padding-left: 40rpx;
}
.hasorder-box .hasorder-list .list-item {
    font-size: 30rpx;
    line-height: 50rpx;
}
.hasorder-box .hasorder-list .order-list {
    /*width: 100%;*/
    overflow: hidden;
    padding-left:30rpx;
}
.hasorder-box .hasorder-list .order-list-li {
    display: block;
}
.hasorder-box .hasorder-btn {
    width: 100%;
    overflow: hidden;
    text-align: center;
}
.hasorder-box .hasorder-btn .order-btn {
    margin: 0 30rpx;
}